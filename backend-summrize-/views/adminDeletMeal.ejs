        //$(this).attr('mealid') // it will show us the index(idx)
       if(confirm("are you sure you want to delete this meal") )   // confirm ~ alert
       {
           $.ajax({
               type: "POST",
               url: "/admin/deletmeal",
               data: { mealid:$(this).attr('mealid') },
               //dataType: "json",
               success: function (response) {
                   //alert('deleted')
                   console.log(e.target);//e.target that means which i click                   
                   $(e.target).parent().parent().parent().remove()  
               },
               error:function(error){
                   console.log(error);
               }
           });
       }
    });
