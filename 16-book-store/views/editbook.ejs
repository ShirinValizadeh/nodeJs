            document.querySelector('#pdfFile').disabled = false
        })


        document.querySelector('#bookSaveBtn').addEventListener('click', e => {
            e.preventDefault();
            // validation  bookTitle
            const bookTitle = document.querySelector('#bookTitleInput').value.trim()
            if (!bookTitle) {
                // showModal(boleen , 'title' , 'content')
                showModal(true, '(title) book title is empty', ' (content)Book Title should not be empty')
                // return gonna stop function if the book is empty
                return
            }
            // validation  imgs
            const oldImgsElements = document.querySelectorAll('.bookimg')
            const newBookImg = document.querySelector('#imgfile').files
            // check if user uploaded imgs or left some old imgs
            if (oldImgsElements.length == 0 && newBookImg.length == 0) {
                showModal(true, 'imgs Error', ' you need to add img')
                return
            }
            // validation  pdf
            const deletPdf = document.querySelector('#deletPdf')
            const pdfFile = document.querySelector('#pdfFile').files  // fille will return arry
            if (!deletPdf && pdfFile.length == 0) {
                showModal(true, 'pdf error', 'you need either to upload pdf file or leave the old one')
                return
            }
            //=============================append 
            //  send to server side 
            const fd = new FormData;
            fd.append('newBookTitle', bookTitle)
            // collect old imgs urls
            const oldImgArr = []
            oldImgsElements.forEach(img => {
                oldImgArr.push(img.src)
            })
            //convert oldImgArr to string to be able to add in fd becuse FormData accept just string
            fd.append('oldImgsUrl', JSON.stringify(oldImgArr))

            //add new Imgs 
            for (let i = 0; i < newBookImg.length; i++) {
                
                 fd.append('bookImg' + i,newBookImg[i] )
            }
         
         
            

            // add the upload pdf file to fd if exist
            if (pdfFile.length) {
                fd.append('pdfFile', pdfFile)
            }
            // book description
            fd.append('bookDedcription', tinymce.get("bookDetails").getContent())

            postData_FormData('/admin/editbook', fd)
        })



