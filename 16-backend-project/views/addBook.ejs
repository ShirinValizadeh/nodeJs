                        { title: "Paragraph", format: "p" },
                        { title: "Blockquote", format: "blockquote" },
                        { title: "Div", format: "div" },
                        { title: "Pre", format: "pre" }
                    ]
                },
                {
                    title: "Alignment", items: [
                        { title: "Left", icon: "alignleft", format: "alignleft" },
                        { title: "Center", icon: "aligncenter", format: "aligncenter" },
                        { title: "Right", icon: "alignright", format: "alignright" },
                        { title: "Justify", icon: "alignjustify", format: "alignjustify" }
                    ]
                }
            ]
        });
        //==================================


        document.querySelector('#bookSaveBtn').addEventListener('click', (e) => {
            e.preventDefault();
            const bookTitle = document.querySelector('#bookTitleInput').value
            const bookDedcription = tinymce.get("bookDetails").getContent();
            const imgFile = document.querySelector('#imgfile').files
            const pdfFile = document.querySelector('#pdfFile').files[0]
            console.log(bookTitleInput, bookDedcription, imgFile, pdfFile);
            //===========send data to serverside

            const fd = new FormData();
            fd.append('bookTitle', bookTitle)
            fd.append('bookDescription', bookDedcription)
            for (let i = 0; i < imgFile.length; i++) {
                fd.append('imgFile' + i, imgFile[i])
            }
            fd.append('pdfFile', pdfFile)
            ////////////////////////////////// fetch ohne function
            fetch('/admin/addBook', {
                method: 'POST',
                body: fd
            }).then(response => {
                //return response to json than it will return promis (then-catch)
                if (response.status == 200) {
                    response.json().then(data => {

                        switch (data) {
                            case 1:
                                showModal(false, "success", "the book is saved ...")
                                 //--- clear content
                         /*       document.querySelector('#bookTitleInput').value = ''
                                tinymce.get("bookDetails").setContent('');
                                document.querySelector('#imgfile').value = ''
                                document.querySelector('#pdfFile').value = ''  */
                                  //--- clear content or  
                                  document.querySelector('#formaddBook').reset() 
                                break;
                            case 2:
                                showModal(true, "faild", "some entries is missing")
                                break;
                                case 3:
                                showModal(true, "faild", "book is exist")
                                break;

                            default:
                                showModal(true, "server error", "pls contact server admin")
                                break;
                        }
                    }).catch(error => {
                        console.log(error);
                        showModal(true, "catch error (server side)", "please contact admin")
                    })
                }else{
                    showModal(true , "error" , "could not send data try again")
